<!-- Edit form -->
<div class="container">
<h1>Edit your article!</h1>
<br />
  <div class="row">
    <div class="col">
      <h2>Edit Article</h2>
			<% if user_signed_in? %>
      <%= form_with scope: :article, model: @article, local: true do |form| %>


					<div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Title of Article</span>
            <%= form.text_field :title, class:"form-control" %>
          </div>


           <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Text</span>
          </div>
          <%= form.text_area :description, class:"form-control" %>
        </div>

              <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Image</span>
          </div>
          <%= form.text_field :image, class:"form-control" %>
        </div>
      </div>
					<%= form.button :class=>'btn btn-primary' do %>
						Post Article <i class="post"></i>
						      <% end %>
						      <% end %>
						      <% end %>

    </div>
  </div>
</div>
</body>