<!-- Showing articles -->
<div class="container">
	<div class="headerTitle">
<h1>
	LATEST NEWS
	<h3>
  <small class="text-muted">FOR USERS BY USERS</small></h3>
</h1>
</div>
  <% if user_signed_in? %>
  <%= link_to "New article ", new_article_path, class:"btn btn-primary mb-3" %>
	<% end %>
<div class = "card-deck">
			<% @articles.each do |article| %>


	 <div class="card">

    <img class="card-img-top" style=" object-fit: contain ; width: 200px; height: 200px; display:block; margin-left:auto; margin-right:auto"  src=<%= article.image %> alt="...">

	  <div class="card-body">
        <a style="color:inherit; text-decoration:inherit" href=<%=article_path(article.id)%>>
            <div class="row no-gutters">
                <div class="card-body">
                  <h4 class="card-title"></h4><h4><%= article.title %></h4>
                  <p class="card-text"></p><p> <%= article.description %></p>
                </div>
            </div>
               			<% if user_signed_in? %>

                	<%= link_to 'Edit',
             edit_article_path(article),
             method: :get,
						 class:"btn btn-primary1 mb-3"%>

                	<%= link_to 'Delete',
             article_path(article),
             method: :delete,
						 class:"btn btn-primary1 mb-3",
             data: { confirm: 'Are you sure?' } %>
                     <% end %>
            </div>
        </a>
    </div>
<%end %>
</div>
</div>
</div>
</div>
</body>